* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px;
}

.container {
  max-width: 700px;
  width: 100%;
  background: white;
  border-radius: 15px;
  padding: 30px;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
}

h1 {
  text-align: center;
  margin-bottom: 30px;
  color: #333;
  font-size: 28px;
}

h2 {
  color: #555;
  margin-bottom: 20px;
  font-size: 22px;
  text-align: center;
}

h3 {
  color: #666;
  margin-bottom: 15px;
  font-size: 18px;
}

/* Screens */
.screen {
  animation: fadeIn 0.3s;
}

.screen.hidden {
  display: none;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* Info box */
.info-box {
  background: linear-gradient(135deg, #e3f2fd, #f3e5f5);
  padding: 20px;
  border-radius: 10px;
  margin-bottom: 25px;
  border-left: 4px solid #667eea;
}

.info-box p {
  font-weight: 600;
  margin-bottom: 10px;
  color: #333;
}

.info-box ul {
  list-style: none;
  padding-left: 0;
}

.info-box li {
  padding: 5px 0;
  color: #555;
}

/* Input */
input[type="text"] {
  width: 100%;
  padding: 15px;
  border: 2px solid #ddd;
  border-radius: 8px;
  font-size: 16px;
  margin-bottom: 15px;
  transition: border-color 0.3s;
}

input[type="text"]:focus {
  outline: none;
  border-color: #667eea;
}

/* Buttons */
button, .btn-file {
  display: inline-block;
  padding: 12px 30px;
  border: none;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s;
  text-align: center;
}

.btn-primary {
  background: #28a745;
  color: white;
  width: 100%;
}

.btn-primary:hover {
  background: #218838;
  transform: translateY(-2px);
}

.btn-secondary {
  background: #4caf50;
  color: white;
}

.btn-secondary:hover {
  background: #45a049;
}

.btn-danger {
  background: #6c757d;
  color: white;
  width: 100%;
  margin-top: 20px;
}

.btn-danger:hover {
  background: #5a6268;
}

.btn-file {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  width: 100%;
  margin-bottom: 20px;
}

.btn-file:hover {
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
}

.btn-text {
  background: none;
  border: 2px solid #4caf50;
  color: #4caf50;
  padding: 8px 20px;
  font-size: 14px;
  width: 100%;
  margin-top: 10px;
}

.btn-text:hover {
  background: #4caf50;
  color: white;
}

button:disabled {
  background: #ccc;
  cursor: not-allowed;
  opacity: 0.6;
}

/* Status bar */
.status-bar {
  display: flex;
  align-items: center;
  gap: 10px;
  flex-wrap: wrap;
  padding: 15px;
  background: #f8f9fa;
  border-radius: 8px;
  margin-bottom: 20px;
  font-size: 14px;
  border-left: 4px solid #667eea;
}

.status-dot {
  width: 12px;
  height: 12px;
  background: #28a745;
  border-radius: 50%;
  box-shadow: 0 0 8px #28a745;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

.separator {
  color: #ccc;
}

.role-badge {
  padding: 5px 12px;
  border-radius: 15px;
  font-weight: 600;
  font-size: 12px;
  color: white;
}

.role-badge.sender {
  background: linear-gradient(135deg, #667eea, #764ba2);
}

.role-badge.receiver {
  background: linear-gradient(135deg, #f093fb, #f5576c);
}

/* Share section */
.share-section {
  background: linear-gradient(135deg, #e8f5e9, #f1f8e9);
  padding: 20px;
  border-radius: 10px;
  margin-bottom: 25px;
  border: 2px solid #81c784;
}

.share-url-container {
  display: flex;
  gap: 10px;
  margin-bottom: 10px;
}

#shareUrl {
  flex: 1;
  font-family: monospace;
  font-size: 13px;
  margin-bottom: 0;
}

.qr-code {
  text-align: center;
  padding: 15px;
  background: white;
  border-radius: 8px;
  margin: 15px 0;
}

/* File info */
.file-info {
  padding: 15px;
  background: #f8f9fa;
  border-radius: 8px;
  margin: 15px 0;
  border: 2px dashed #ddd;
}

.file-info p {
  margin: 5px 0;
  color: #555;
}

.file-info img {
  max-width: 100%;
  max-height: 200px;
  margin-top: 10px;
  border-radius: 5px;
}

/* Peers list */
.peers-list {
  background: #e7f3ff;
  padding: 15px;
  border-radius: 8px;
  margin: 15px 0;
}

.peer-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
  background: white;
  border-radius: 5px;
  margin-bottom: 8px;
}

.peer-item button {
  padding: 8px 15px;
  font-size: 14px;
  background: #667eea;
  color: white;
}

.no-peers {
  text-align: center;
  padding: 30px;
  background: #fff3cd;
  border-radius: 8px;
  margin: 15px 0;
  color: #856404;
}

.no-peers small {
  display: block;
  margin-top: 10px;
  color: #664d03;
}

/* Waiting */
.waiting {
  text-align: center;
  padding: 40px 20px;
}

.spinner {
  width: 50px;
  height: 50px;
  margin: 0 auto 20px;
  border: 5px solid #f3f3f3;
  border-top: 5px solid #f5576c;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* File received */
.file-received {
  text-align: center;
  padding: 20px;
}

.success-icon {
  font-size: 60px;
  margin-bottom: 15px;
  animation: scaleIn 0.5s;
}

@keyframes scaleIn {
  0% { transform: scale(0); }
  50% { transform: scale(1.2); }
  100% { transform: scale(1); }
}

/* Progress bar */
.progress-container {
  margin: 20px 0;
}

.progress-bar {
  height: 30px;
  background: #e9ecef;
  border-radius: 15px;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea, #764ba2);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: bold;
  transition: width 0.3s;
}

/* Status message */
.status-message {
  padding: 12px;
  background: #d1ecf1;
  border: 1px solid #bee5eb;
  border-radius: 6px;
  margin: 15px 0;
  color: #0c5460;
  text-align: center;
  font-size: 14px;
}

.status-message:empty {
  display: none;
}

/* Hidden */
.hidden {
  display: none !important;
}

/* Responsive */
@media (max-width: 600px) {
  .container {
    padding: 20px;
  }

  h1 {
    font-size: 24px;
  }

  .share-url-container {
    flex-direction: column;
  }

  .status-bar {
    font-size: 12px;
  }
}